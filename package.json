{
    "name": "offdjs",
    "version": "2.5.2",
    "type": "module",
    "description": "oneki framework for discord.js",
    "main": "lib/index.js",
    "bin": "lib/cli.js",
    "exports": {
        ".": "./lib/index.js",
        "./djs": "./lib/djs.js"
    },
    "scripts": {
        "prepare": "npm run build",
        "build": "tsc",
        "start": "node lib/index.js",
        "dev": "nodemon lib/index.js",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "test": "node tests/test.js",
        "cli": "node lib/cli.js"
    },
    "keywords": [
        "oneki",
        "djs",
        "discord.js",
        "discordjs",
        "discord-bot",
        "bot",
        "discord-api",
        "discord",
        "framework",
        "node",
        "nodejs",
        "node.js"
    ],
    "author": {
        "name": "eliyya",
        "email": "elimacmun@gmail.com",
        "url": "https://twitter.com/eli_yya"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/i18n": "0.13.6",
        "@types/node": "20.3.1",
        "@typescript-eslint/eslint-plugin": "5.60.0",
        "@typescript-eslint/parser": "5.60.0",
        "eslint": "8.43.0",
        "typescript": "5.1.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/OnekiDevs/offdjs.git"
    },
    "bugs": {
        "url": "https://github.com/OnekiDevs/offdjs/issues"
    },
    "homepage": "https://github.com/OnekiDevs/offdjs#readme",
    "dependencies": {
        "commander": "11.0.0",
        "discord.js": "^14.11.0",
        "dotenv": "16.3.1",
        "i18n": "0.15.1",
        "just-extend": "6.2.0"
    },
    "engines": {
        "node": ">=18.12.0"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "arrowParens": "avoid",
        "bracketSpacing": true
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "root": true,
        "parserOptions": {
            "project": "./tsconfig.json"
        },
        "rules": {
            "@typescript-eslint/no-misused-promises": [
                "error",
                {
                    "checksVoidReturn": false
                }
            ],
            "@typescript-eslint/no-explicit-any": [
                "off"
            ],
            "@typescript-eslint/no-unsafe-assignment": [
                "off"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "never"
            ],
            "indent": [
                "error",
                4
            ],
            "comma-dangle": [
                "error",
                "always-multiline"
            ],
            "arrow-parens": [
                "error",
                "as-needed"
            ]
        }
    },
    "eslintIgnore": [
        "lib",
        "node_modules",
        "tests"
    ]
}
